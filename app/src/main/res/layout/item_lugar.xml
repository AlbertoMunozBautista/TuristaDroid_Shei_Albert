<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/itemLugar"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="16dp"
                                   app:cardBackgroundColor="@color/colorBlanco"
                                   app:cardCornerRadius="20dp"
                                   app:cardElevation="10dp"
                                   app:cardUseCompatPadding="false" app:cardPreventCornerOverlap="false"
                                   app:contentPaddingBottom="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4">

        <ImageView
                android:id="@+id/imaItemFoto"
                android:layout_height="225dp"
                android:layout_width="match_parent"
                android:scaleType="centerCrop" app:srcCompat="@drawable/lugar4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                android:adjustViewBounds="true"/>


        <TextView
                android:id="@+id/tvItemNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/imaItemFoto"
                android:text="Esto es un nombre de Prueba" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/tvItemFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"
                app:layout_constraintTop_toBottomOf="@+id/tvItemNombre"
                android:text="10/10/2020" android:layout_marginTop="12dp"
                android:textStyle="bold" app:layout_constraintEnd_toStartOf="@+id/tvItemLugar"
                android:layout_marginEnd="24dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
        <TextView
                android:id="@+id/tvItemLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"

                android:text="Tipo" android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvItemNombre" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/tvItemFecha"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
        <TextView
                android:text="1 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvItemEstrella" android:textStyle="bold"
                android:textColor="@color/colorNegro" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvItemNombre"
                app:layout_constraintStart_toEndOf="@+id/tvItemLugar" android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
        <ImageView
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_star"
                android:layout_height="wrap_content" android:id="@+id/imaItemEstrella" android:textStyle="bold"
                android:textColor="@color/colorPrimary" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvItemNombre"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/tvItemEstrella"
                android:layout_marginStart="4dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>