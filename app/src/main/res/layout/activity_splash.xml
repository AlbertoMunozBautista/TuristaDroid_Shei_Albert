<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoSplash"
        tools:context=".SplashActivity">

    <ImageView
            android:layout_width="337dp"
            android:layout_height="355dp" app:srcCompat="@drawable/logo_splash" android:id="@+id/imaSplashLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/splash_texto"
            android:textColor="@color/textoSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvSplashTexto"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imaSplashLogo" android:layout_marginTop="16dp"
            android:textSize="24sp"/>
    <TextView
            android:text="@string/splash_texto2"
            android:textColor="@color/textoSplash"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvSplashTexto2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSplashTexto" android:fontFamily="sans-serif"/>


</androidx.constraintlayout.widget.ConstraintLayout>